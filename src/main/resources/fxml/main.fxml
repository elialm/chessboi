<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/2.2" fx:controller="org.efac.ui.ChessboardController">
    <left>
        <VBox id="controls" prefWidth="300">
            <Label text="Chessboard size"/>
            <BorderPane id="controls-chessboard-size-text">
                <left>
                    <TextField fx:id="chessboardWidth" text="8" prefWidth="100"/>
                </left>
                <center>
                    <Label text="X"/>
                </center>
                <right>
                    <TextField fx:id="chessboardHeight" text="8" prefWidth="100"/>
                </right>
            </BorderPane>
            <AnchorPane id="controls-chessboard-size-button">
                <Button text="Update size" onAction="#pressed" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"/>
            </AnchorPane>
        </VBox>
    </left>
    <center>
        <BorderPane id="chessboard-container" prefWidth="600">
            <center>
                <GridPane id="chessboard" maxWidth="550" maxHeight="550" minWidth="550" minHeight="550" prefWidth="550" prefHeight="550"/>
            </center>
        </BorderPane>
    </center>
</BorderPane>